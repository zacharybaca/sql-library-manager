extends layout

block content
  h1= book.title
  form(action=`/books/${book.id}` method="POST")
    include form-error
    include form
    p
      input(type="submit" value="Update Book")
    

  form(action="/books/" + book.id + "/delete", method="post")
    p
      input(type="submit", value="Delete")
    
  div(class="cancel")
    a.button(href="/") Cancel